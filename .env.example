# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/deckworthy.db

# API Keys
STEAM_API_KEY=your_steam_api_key_here
ITAD_API_KEY=your_isthereanydeal_api_key_here

# Sync Schedule (cron format)
SYNC_PRICES_SCHEDULE="0 */6 * * *"  # Every 6 hours
SYNC_PROTONDB_SCHEDULE="0 2 * * *"  # Daily at 2am
SYNC_GAMES_SCHEDULE="0 3 * * 0"     # Weekly on Sunday at 3am

# CORS (comma-separated origins for production)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
