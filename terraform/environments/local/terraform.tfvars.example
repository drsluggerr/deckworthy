# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

# Path to your kubeconfig (k3s default is /etc/rancher/k3s/k3s.yaml)
# You may need to copy this to ~/.kube/config or set KUBECONFIG env var
kubeconfig_path = "~/.kube/config"

# Namespace to deploy to
namespace = "deckworthy"

# Environment name
environment = "local"

# Docker image (use local or registry)
image = "deckworthy:latest"

# API Keys (required)
steam_api_key = "your-steam-api-key-here"
itad_api_key  = "your-itad-api-key-here"

# Ingress hostname (update with your domain or use .local for testing)
ingress_host = "deckworthy.local"

# CORS origins (comma-separated)
cors_origins = "http://localhost:3000,http://deckworthy.local"

# Storage size
storage_size = "5Gi"

# Enable TLS (requires cert-manager or manual certificate)
enable_tls = false

# Resource limits (adjust based on your server)
resources_requests_cpu    = "100m"
resources_requests_memory = "256Mi"
resources_limits_cpu      = "500m"
resources_limits_memory   = "512Mi"

# Sync schedules (cron format)
sync_prices_schedule   = "0 */6 * * *"  # Every 6 hours
sync_protondb_schedule = "0 2 * * *"    # Daily at 2am
sync_games_schedule    = "0 3 * * 0"    # Weekly on Sunday at 3am
